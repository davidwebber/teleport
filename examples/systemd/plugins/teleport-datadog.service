[Unit]
Description=Teleport Datadog Incident Management Plugin
After=network.target

[Service]
Type=simple
Restart=on-failure
ExecStart=/usr/local/bin/teleport-datadog start --config=/etc/teleport-datadog.toml
ExecReload=/bin/kill -HUP $MAINPID
PIDFile=/run/teleport-datadog.pid

[Install]
WantedBy=multi-user.target
